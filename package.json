{
  "name": "ieg-service-manager",
  "version": "1.1.0",
  "description": "IEG多服务管理API和Web界面 - 支持Home Assistant, Zigbee2MQTT, Matter Server等服务的统一管理",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node -e \"console.log('Testing basic functionality...'); require('./server.js');\"",
    "install-deps": "npm install",
    "setup": "npm run install-deps && npm run create-dirs",
    "create-dirs": "mkdir -p public logs",
    "health": "curl -s http://localhost:3008/ieg-serviceapi/health | jq .",
    "services": "curl -s http://localhost:3008/ieg-serviceapi/services | jq .",
    "reload": "curl -s -X POST http://localhost:3008/ieg-serviceapi/services/reload | jq ."
  },
  "keywords": [
    "ieg",
    "service",
    "management",
    "homeassistant",
    "zigbee2mqtt",
    "matter-server",
    "api",
    "websocket",
    "termux",
    "automation"
  ],
  "author": "IEG Service Manager Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ieg-team/service-manager.git"
  },
  "bugs": {
    "url": "https://github.com/ieg-team/service-manager/issues"
  },
  "homepage": "https://github.com/ieg-team/service-manager#readme",
  "config": {
    "port": 3008,
    "api_prefix": "/ieg-serviceapi",
    "service_dir": "/data/data/com.termux/files/home/servicemanager"
  },
  "os": [
    "linux",
    "android"
  ]
}
